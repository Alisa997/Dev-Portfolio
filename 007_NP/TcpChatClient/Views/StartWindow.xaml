<Window x:Class="TcpChatClient.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TcpChatClient.Views"
        mc:Ignorable="d"
        Title="Enter Username" 
        Height="100" 
        Width="300" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        FontFamily="Verdana">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Your name -->
            <RowDefinition Height="*"/>

            <!-- Buttons -->
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <!-- Text labels -->
            <ColumnDefinition />

            <!-- Input fields -->
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Your name -->
        <TextBlock Text="Your Name:" Margin="5" VerticalAlignment="Center"/>
        <TextBox Grid.Column="1"
                 Margin="5"
                 Name="TbxUserName" 
                 Width="Auto"
                 Height="20"
                 TextAlignment="Left"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Background="DarkSlateBlue" Foreground="White"
                    Name ="BtnOK"
                    Margin="0 0 5 0"
                    Height="25"
                    Width="100"
                    Content="Ok"
                    IsCancel="false"
                    IsDefault="True"
                    Click="Ok_Command"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave"/>

            <Button Background="DarkRed" Foreground="White"
                    Margin="5 0"
                    Height="25"
                    Width="100"
                    Content="Cancel"
                    IsCancel="true"
                    IsDefault="True"
                    Click="Exit_Command"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave"/>
        </StackPanel>
    </Grid>
</Window>
