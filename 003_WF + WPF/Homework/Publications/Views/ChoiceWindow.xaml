<Window x:Class="Homework.Views.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework.Views"
        mc:Ignorable="d"
        Title="Select Parameter" 
        Height="150" 
        Width="250" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen" 
        ShowInTaskbar="False" 
        FontFamily="Verdana">
    <Grid>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Header -->
            <TextBox Name ="TbxHeader" Grid.Row="0"
                 VerticalContentAlignment="Center"
                 HorizontalContentAlignment="Left"
                 Margin="0 0 0 10"
                 BorderThickness="0"
                 IsReadOnly="True"
                 IsTabStop="False"
                 FontSize="12">
                Selection Wizard for Repairs:
            </TextBox>
            <ComboBox Name="CmbChoice" 
                      AllowDrop="True"
                      Width="200"
                      HorizontalContentAlignment="Left"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Background="DarkSlateBlue" Foreground="White"
                    Margin="0 10 5 0"
                    Height="25"
                    Width="100"
                    Content="Select"
                    Click="Ok_Click"
                    IsCancel="false"
                    IsDefault="True"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave"/>

                <Button Background="DarkRed" Foreground="White"
                    Margin="5 10 0 0"
                    Height="25"
                    Width="100"
                    Content="Cancel"
                    IsCancel="true"
                    IsDefault="True"
                    MouseEnter="Button_MouseEnter"
                    MouseLeave="Button_MouseLeave"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
